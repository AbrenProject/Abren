<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="15dp"
    tools:context=".RegisterForm1Fragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/dark"
        android:text="@string/profile_picture" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="182dp"
        android:layout_height="120dp"
        android:contentDescription="@string/profile_picture"
        android:src="@drawable/ic_camera" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/dark"
        android:layout_marginBottom="15dp"
        android:text="@string/personal_information" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:padding="15dp"
            android:layout_marginRight="3dp"
            android:layout_marginEnd="3dp"
            android:textColor="@color/dark"
            android:text="@string/eth_country_code"
            android:background="@drawable/rounded_edittext" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textSize="15sp"
            android:inputType="phone"
            android:hint="@string/phone_number"
            android:background="@drawable/rounded_edittext" />

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textSize="15sp"
        android:drawablePadding="30dp"
        android:drawableLeft="@drawable/ic_camera"
        android:hint="@string/Select_image"
        android:layout_marginBottom="25dp"
        android:background="@drawable/rounded_edittext"
        android:drawableStart="@drawable/ic_camera" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:fontFamily="sans-serif-black"
        android:layout_marginBottom="15dp"
        android:textColor="@color/dark"
        android:text="@string/Emergency_info_text_view" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:padding="15dp"
            android:layout_marginRight="3dp"
            android:layout_marginEnd="3dp"
            android:textColor="@color/dark"
            android:text="@string/eth_country_code"
            android:background="@drawable/rounded_edittext" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textSize="15sp"
            android:inputType="phone"
            android:hint="@string/phone_number"
            android:background="@drawable/rounded_edittext" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:layout_gravity="start"
            style="@style/App_Button.drawableStart" />

        <Button
            android:id="@+id/continue_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/App_Button.drawableFinish"
            android:textAlignment="textEnd"
            android:layout_gravity="end" />

    </LinearLayout>


</LinearLayout>