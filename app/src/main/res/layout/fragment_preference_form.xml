<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/app_margin"
        android:layout_marginEnd="@dimen/app_margin"
        android:orientation="vertical"
        android:paddingTop="10dp"
        tools:context=".PreferenceFormFragment">

        <TextView
            style="@style/App_TextView.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:text="@string/preferences" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/app_margin"
            android:text="@string/Select_types_of_people" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/app_margin"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/app_padding"
                android:paddingEnd="@dimen/app_padding">

                <CheckBox
                    android:id="@+id/ege_group_checkBox1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/app_padding"
                    android:text="@string/age_group1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/app_padding"
                    android:paddingEnd="@dimen/app_padding">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_female"
                        style="@style/App_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/app_padding"
                        android:checked="true"
                        android:padding="0dp"
                        android:switchPadding="@dimen/app_padding"
                        android:text="@string/female" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_male"
                        style="@style/App_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:switchPadding="@dimen/app_padding"
                        android:text="@string/male" />
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/app_margin"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/app_padding"
                android:paddingEnd="@dimen/app_padding">

                <CheckBox
                    android:id="@+id/ege_group_checkBox2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/app_padding"
                    android:text="@string/age_group2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/app_padding"
                    android:paddingEnd="@dimen/app_padding">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_female2"
                        style="@style/App_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/app_padding"
                        android:checked="true"
                        android:padding="0dp"
                        android:switchPadding="@dimen/app_padding"
                        android:text="@string/female" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_male2"
                        style="@style/App_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:switchPadding="@dimen/app_padding"
                        android:text="@string/male" />
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/app_margin"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/app_padding"
                android:paddingEnd="@dimen/app_padding">

                <CheckBox
                    android:id="@+id/ege_group_checkBox3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/app_padding"
                    android:text="@string/age_group3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/app_padding"
                    android:paddingEnd="@dimen/app_padding">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_female3"
                        style="@style/App_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/app_padding"
                        android:checked="true"
                        android:padding="0dp"
                        android:switchPadding="@dimen/app_padding"
                        android:text="@string/female" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_male3"
                        style="@style/App_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:switchPadding="@dimen/app_padding"
                        android:text="@string/male" />
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/app_margin"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/app_padding"
                android:paddingEnd="@dimen/app_padding">

                <CheckBox
                    android:id="@+id/ege_group_checkBox4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/app_padding"
                    android:text="@string/age_group4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/app_padding"
                    android:paddingEnd="@dimen/app_padding">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_female4"
                        style="@style/App_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/app_padding"
                        android:padding="0dp"
                        android:switchPadding="@dimen/app_padding"
                        android:text="@string/female" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_male4"
                        style="@style/App_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:padding="0dp"
                        android:switchPadding="@dimen/app_padding"
                        android:text="@string/male" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/app_margin"
            android:drawablePadding="@dimen/app_padding"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="@string/change_preference_anytime"
            app:drawableStartCompat="@drawable/ic_info" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/app_margin"
            android:orientation="horizontal">

            <Button
                android:id="@+id/back_button_preference"
                style="@style/App_Button.drawableStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:textAlignment="viewStart" />

            <Button
                android:id="@+id/finish_button"
                style="@style/App_Button.drawableFinish"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:text="@string/finish"
                android:textAlignment="textEnd" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>