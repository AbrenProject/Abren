<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/app_margin"
        tools:context=".PreferenceFormFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            style="@style/App_TextView.Title"
            android:text="@string/preferences" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/app_margin"
            android:text="@string/Select_types_of_people"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/app_margin"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/app_padding"
                android:paddingStart="@dimen/app_padding"
                android:paddingEnd="@dimen/app_padding">

                <CheckBox
                    android:id="@+id/ege_group_checkBox1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/app_padding"
                    android:text="@string/age_group1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/app_padding"
                android:paddingLeft="@dimen/app_padding"
                android:paddingEnd="@dimen/app_padding"
                android:orientation="horizontal">

                    <Switch
                        android:id="@+id/switch_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:layout_marginRight="@dimen/app_padding"
                        android:layout_marginEnd="@dimen/app_padding"
                        android:switchPadding="@dimen/app_padding"
                        android:checked="true"
                        style="@style/App_TextView"
                        android:text="@string/female" />

                    <Switch
                        android:id="@+id/switch_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:switchPadding="@dimen/app_padding"
                        android:padding="0dp"
                        style="@style/App_TextView"
                        android:text="@string/male" />
            </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/app_margin"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/app_padding"
                android:paddingStart="@dimen/app_padding"
                android:paddingEnd="@dimen/app_padding">

                <CheckBox
                    android:id="@+id/ege_group_checkBox2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/app_padding"
                    android:text="@string/age_group2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/app_padding"
                    android:paddingLeft="@dimen/app_padding"
                    android:paddingEnd="@dimen/app_padding"
                    android:orientation="horizontal">

                    <Switch
                        android:id="@+id/switch_female2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:layout_marginRight="@dimen/app_padding"
                        android:layout_marginEnd="@dimen/app_padding"
                        android:switchPadding="@dimen/app_padding"
                        android:checked="true"
                        style="@style/App_TextView"
                        android:text="@string/female" />

                    <Switch
                        android:id="@+id/switch_male2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:switchPadding="@dimen/app_padding"
                        android:padding="0dp"
                        style="@style/App_TextView"
                        android:text="@string/male" />
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/app_margin"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/app_padding"
                android:paddingStart="@dimen/app_padding"
                android:paddingEnd="@dimen/app_padding">

                <CheckBox
                    android:id="@+id/ege_group_checkBox3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/app_padding"
                    android:text="@string/age_group3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/app_padding"
                    android:paddingLeft="@dimen/app_padding"
                    android:paddingEnd="@dimen/app_padding"
                    android:orientation="horizontal">

                    <Switch
                        android:id="@+id/switch_female3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:layout_marginRight="@dimen/app_padding"
                        android:layout_marginEnd="@dimen/app_padding"
                        android:switchPadding="@dimen/app_padding"
                        android:checked="true"
                        style="@style/App_TextView"
                        android:text="@string/female" />

                    <Switch
                        android:id="@+id/switch_male3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:switchPadding="@dimen/app_padding"
                        android:padding="0dp"
                        style="@style/App_TextView"
                        android:text="@string/male" />
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/app_margin"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/app_padding"
                android:paddingStart="@dimen/app_padding"
                android:paddingEnd="@dimen/app_padding">

                <CheckBox
                    android:id="@+id/ege_group_checkBox4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/app_padding"
                    android:text="@string/age_group4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/app_padding"
                    android:paddingLeft="@dimen/app_padding"
                    android:paddingEnd="@dimen/app_padding"
                    android:orientation="horizontal">

                    <Switch
                        android:id="@+id/switch_female4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:layout_marginRight="@dimen/app_padding"
                        android:layout_marginEnd="@dimen/app_padding"
                        android:switchPadding="@dimen/app_padding"
                        style="@style/App_TextView"
                        android:text="@string/female" />

                    <Switch
                        android:id="@+id/switch_male4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:switchPadding="@dimen/app_padding"
                        android:checked="true"
                        android:padding="0dp"
                        style="@style/App_TextView"
                        android:text="@string/male" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/app_margin"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:drawablePadding="@dimen/app_padding"
            android:text="@string/change_preference_anytime"
            android:drawableLeft="@drawable/ic_info"
            android:drawableStart="@drawable/ic_info" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/app_margin"
            android:orientation="horizontal">

            <Button
                android:id="@+id/back_button_preference"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:layout_gravity="start"
                style="@style/App_Button.drawableStart" />

            <Button
                android:id="@+id/finish_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_finish"
                android:drawableEnd="@drawable/ic_finish"
                android:text="@string/finish"
                style="@style/App_Button.drawableFinish"
                android:textAlignment="textEnd"
                android:layout_gravity="end" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>