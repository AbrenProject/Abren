<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".UserProfile">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/orange"
    android:padding="20dp">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="74dp"
        android:layout_height="89dp"
        android:layout_centerVertical="true"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/riderNumber2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/profile_image"
        android:includeFontPadding="false"
        android:text="Amen Sime"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/username_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/riderNumber2"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/profile_image"
        android:includeFontPadding="false"
        android:text="amen_sime"
        android:textSize="14sp" />
</RelativeLayout>

<LinearLayout
    android:layout_height="wrap_content"
    android:layout_marginTop="-50dp"
    android:layout_width="match_parent"
    android:padding="20dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:background="#fad6a5"
        android:elevation="10dp">

        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:padding="5dp">

            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_height="30dp"
                android:layout_width="30dp"
                />

            <TextView
                android:id="@+id/payment_label"
                android:includeFontPadding="false"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="500"
                android:textStyle="bold"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/payment_desc"
                android:includeFontPadding="false"
                android:layout_below="@id/payment_label"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:text="Miles"
                android:textSize="20sp" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>


<TextView
    android:id="@+id/textView2"
    style="@style/App_TextView.Title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/personal_information" />

<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <com.google.android.material.textfield.TextInputLayout
        android:hint="Full Name"
        android:id="@+id/full_name_profile"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <com.google.android.material.textfield.TextInputEditText

            android:drawablePadding="10dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:hint="Phone Number"
        android:id="@+id/phone_number"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <com.google.android.material.textfield.TextInputEditText

            android:drawablePadding="10dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:hint="Emergency Number"
        android:id="@+id/emergency_phone_number"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <com.google.android.material.textfield.TextInputEditText

            android:drawablePadding="10dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        style="@style/App_TextView.Title"
        android:text="@string/preferences" />


</LinearLayout>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/app_margin"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/app_padding"
            android:paddingStart="@dimen/app_padding"
            android:paddingEnd="@dimen/app_padding">

            <CheckBox
                android:id="@+id/ege_group_checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/app_padding"
                android:text="@string/age_group1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/app_padding"
                android:paddingLeft="@dimen/app_padding"
                android:paddingEnd="@dimen/app_padding"
                android:orientation="horizontal">

                <Switch
                    android:id="@+id/switch_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:layout_marginRight="@dimen/app_padding"
                    android:layout_marginEnd="@dimen/app_padding"
                    android:switchPadding="@dimen/app_padding"
                    android:checked="true"
                    style="@style/App_TextView"
                    android:text="@string/female" />

                <Switch
                    android:id="@+id/switch_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:switchPadding="@dimen/app_padding"
                    android:padding="0dp"
                    style="@style/App_TextView"
                    android:text="@string/male" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp">
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/App_TextView.Title"
        android:layout_marginTop="10dp"
        android:text="@string/rating" />
    <RatingBar
        android:id="@+id/ratingBar2"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />


</LinearLayout>

</LinearLayout>

