<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/app_margin"
    android:orientation="vertical"
    tools:context=".DriverHomeFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark"
        android:layout_gravity="top"
        android:textSize="@dimen/text_size"
        android:text="Select One of your saved routes to start giving a ride" />

    <ListView
        android:id="@+id/list_listView"
        android:layout_width="wrap_content"
        android:layout_gravity="top"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not taking the above routes?"
        android:textColor="@color/dark"
        android:layout_marginBottom="55dp"
        android:layout_gravity="bottom"
        android:textSize="@dimen/text_size" />

    <Button
        android:id="@+id/create_route_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="Create New Route" />

</FrameLayout>

