<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/orangeDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- app styles  -->
    <style name="App_Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/round_orange</item>
        <item name="android:layout_marginBottom">@dimen/app_margin</item>
        <item name="android:textSize">@dimen/text_size</item>

    </style>

    <style name="App_Button.drawableStart">
        <item name="android:drawableLeft">@drawable/ic_back</item>
        <item name="android:text">@string/back</item>
        <item name="android:layout_marginBottom">@dimen/app_margin</item>
        <item name="android:paddingLeft">@dimen/app_padding</item>
        <item name="android:layout_marginRight">@dimen/middle_space</item>
        <item name="android:drawablePadding">@dimen/app_padding</item>

    </style>

     <style name="App_Button.drawableFinish">
        <item name="android:drawableRight">@drawable/ic_continue</item>
        <item name="android:text">@string/Continue</item>
        <item name="android:layout_marginBottom">@dimen/app_margin</item>
        <item name="android:paddingRight">@dimen/app_padding</item>
        <item name="android:drawablePadding">@dimen/app_padding</item>

    </style>


    <style name="App_TextView">
        <item name="background">@drawable/round_orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">@dimen/app_margin</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
