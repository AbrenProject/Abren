<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/orangeDark</item>
        <item name="colorAccent">@color/orange</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

<!--    <style name="AppTheme.NoActionBar">-->
<!--        <item name="windowActionBar">false</item>-->
<!--        <item name="windowNoTitle">true</item>-->
<!--    </style>-->

    <style parent="@android:style/Animation.Activity" name="CustomActivityAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>

    </style>

    <!-- Button  -->
    <style name="App_Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/round_orange</item>
        <item name="android:layout_marginBottom">@dimen/app_margin</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="App_Button.drawableStart">
        <item name="android:drawableLeft">@drawable/ic_back</item>
        <item name="android:text">@string/back</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:layout_marginBottom">@dimen/app_margin</item>
        <item name="android:paddingLeft">@dimen/app_padding</item>
        <item name="android:layout_marginRight">@dimen/middle_space</item>
        <item name="android:drawablePadding">@dimen/app_padding</item>
    </style>

     <style name="App_Button.drawableFinish">
         <item name="android:drawableRight">@drawable/ic_continue</item>
         <item name="android:text">@string/Continue</item>
         <item name="android:textSize">@dimen/text_size_small</item>
         <item name="android:layout_marginBottom">@dimen/app_margin</item>
         <item name="android:paddingRight">@dimen/app_padding</item>
         <item name="android:drawablePadding">@dimen/app_padding</item>
    </style>


    <!-- Text View -->
    <style name="App_TextView">
        <item name="android:textColor">@color/dark</item>
        <item name="android:layout_marginBottom">@dimen/app_margin</item>
        <item name="android:padding">@dimen/app_padding</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:drawablePadding">@dimen/app_padding</item>
    </style>

     <style name="App_TextView.Title">
        <item name="fontFamily">serif</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:padding">0dp</item>
        <item name="android:textStyle">bold</item>
     </style>

    <style name="App_EditText">
        <item name="android:padding">@dimen/app_padding</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:layout_marginBottom">@dimen/app_margin</item>
    </style>

    <style name="App_Button.left">
        <item name="android:drawableLeft">@drawable/ic_back</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:layout_marginBottom">@dimen/app_margin</item>
        <item name="android:paddingLeft">@dimen/app_padding</item>
        <item name="android:layout_marginRight">@dimen/middle_space</item>
        <item name="android:drawablePadding">@dimen/app_padding</item>
    </style>

    <style name="App_Button.accept">
        <item name="android:text">@string/accept</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:layout_marginBottom">@dimen/app_margin</item>
        <item name="android:paddingLeft">@dimen/app_padding</item>
        <item name="android:layout_marginRight">@dimen/middle_space</item>
        <item name="android:drawablePadding">@dimen/app_padding</item>
    </style>

    <style name="App_Button.waiting">

        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:layout_marginBottom">@dimen/app_margin</item>
        <item name="android:paddingLeft">@dimen/app_padding</item>
        <item name="android:layout_marginRight">@dimen/middle_space</item>
        <item name="android:drawablePadding">@dimen/app_padding</item>
    </style>

    <style name="App_Button.send">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:layout_marginBottom">@dimen/app_margin</item>
        <item name="android:paddingLeft">@dimen/app_padding</item>
        <item name="android:layout_marginRight">@dimen/middle_space</item>
        <item name="android:drawablePadding">@dimen/app_padding</item>
    </style>


    <style name="App_Button.right">
        <item name="android:drawableRight">@drawable/ic_continue</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:layout_marginBottom">@dimen/app_margin</item>
        <item name="android:paddingRight">@dimen/app_padding</item>
        <item name="android:drawablePadding">@dimen/app_padding</item>
    </style>

